.goods_list {
  padding: 0 15rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.goods_list .goods_item {
  background: #fff;
  width: 355rpx;
  margin: 10rpx 0;
  padding: 15rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.goods_list .goods_item image {
  width: 80%;
  height: 150px;
  display: block;
  margin: auto;
}
.goods_list .goods_item .msg {
  color: #87CEFF;
  font-size: 36rpx;
  margin: 20rpx 0 5rpx 0;
}
.goods_list .goods_item .msg text:nth-child(2) {
  color: #ccc;
  font-size: 28rpx;
  margin-left: 17rpx;
}
.goods_list .goods_item .goods_name {
  font-size: 33rpx;
  line-height: 50rpx;
  padding-bottom: 15rpx;
  padding-top: 10rpx;
}

